template(name="friend_show")
  | The Palace of
  h1.page-header
    {{avatar email}}
    {{username _id}}
    span.pull-right
      if canEdit
        a.btn.btn-default(href="/projects/#{_id}/edit") Edit
      else
        if userHasFriendship
          with userHasFriendship
            .btn.btn-default.btn-unfriend(title='Unfriend')
              i.fa.fa-child
              i.fa.fa-child
              |  You are friends!
        else
          .btn.btn-primary.btn-befriend
            i.fa.fa-child
            |  Add as a friend

  .row
    .col-md-6
      if projects
        h2 Projects
        ul
          each projects
            li
              a(href="/projects/#{_id}")
                =name
              if date
                |  on {{formatDate date}}

      if project_participations
        h2 Helping
        ul
          each project_participations
            li
              a(href="/projects/#{_id}")
                {{name}}
                |  at {{username userId}}'s Palace
                if date
                  |  on {{formatDate date}}

    .col-md-6
      if friends
        h2 Friends
        ul.list-inline
          each friends
            li
              a(href="/friends/#{_id}")
                {{username _id}}
  br

  +comment_list
